#eskenar ucgen
kenar = 5
yukseklik = 4
alan = kenar * yukseklik /2
print(alan)
alan = int(alan)
print("yukseklik",yukseklik,"ve kenari",kenar, "olan eskenar ucgenin alani", alan,"dir")

